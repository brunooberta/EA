                    <TextView
                        android:id="@+id/tv_h_max_label_1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:text="H max: "
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp" />


