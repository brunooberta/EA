<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_background"
    tools:context="bop.ea_free.ShareActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="551dp"
        android:layout_margin="1dp"
        android:background="@color/col_background"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_share_activity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@color/col_background"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>


        <LinearLayout

            android:id="@+id/rl_share_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/share_style"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_trackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_holder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="1dp"
                android:layout_weight="0.21"
                android:background="@drawable/share_style"
                android:padding="5dp"
                app:srcCompat="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_L_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Length:"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_T_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Duration:"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_T"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Dp_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="D Positive:"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_Dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/share_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Dm_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="D Negative:"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_Dm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
