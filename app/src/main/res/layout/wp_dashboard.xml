<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_add_wp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/add_marker" />

    <ImageView
        android:id="@+id/img_select_wp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/marker_unchecked" />

    <ImageView
        android:id="@+id/img_prev_wp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/prev_marker" />

    <ImageView
        android:id="@+id/img_next_wp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/next_marker" />
</LinearLayout>